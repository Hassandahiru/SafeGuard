{
  "info": {
    "name": "SafeGuard Visitor Ban API",
    "description": "Complete API testing collection for SafeGuard visitor ban system - Updated with new test objects and latest implementation",
    "version": "2.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "{{baseUrl}}",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "{{accessToken}}",
      "type": "string"
    },
    {
      "key": "visitorBanId", 
      "value": "{{visitorBanId}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Create Visitor Ban",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Marcus Troublemaker\",\n  \"phone\": \"{{bannedPhoneNumber}}\",\n  \"reason\": \"Inappropriate behavior during last visit and disrespectful to security staff\",\n  \"severity\": \"high\",\n  \"notes\": \"Resident requested permanent ban due to security concerns. Multiple incident reports filed.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans"]
        }
      }
    },
    {
      "name": "Get Visitor Bans",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans?page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "Search Visitor Bans",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans/search?query=john&limit=5",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans", "search"],
          "query": [
            {
              "key": "query",
              "value": "john"
            },
            {
              "key": "limit",
              "value": "5"
            }
          ]
        }
      }
    },
    {
      "name": "Check Visitor Ban",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans/check/{{bannedPhoneNumber}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans", "check", "{{bannedPhoneNumber}}"]
        }
      }
    },
    {
      "name": "Building-wide Ban Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans/building-check/{{bannedPhoneNumber}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans", "building-check", "{{bannedPhoneNumber}}"]
        }
      }
    },
    {
      "name": "Get Ban Statistics",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans/stats",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans", "stats"]
        }
      }
    },
    {
      "name": "Get Recently Banned",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans/recently-banned?limit=5",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans", "recently-banned"],
          "query": [
            {
              "key": "limit",
              "value": "5"
            }
          ]
        }
      }
    },
    {
      "name": "Filter by Severity",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans/severity/medium",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans", "severity", "medium"]
        }
      }
    },
    {
      "name": "Export Ban List",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans/export?format=json",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans", "export"],
          "query": [
            {
              "key": "format",
              "value": "json"
            }
          ]
        }
      }
    },
    {
      "name": "Update Ban",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reason\": \"Updated ban reason - escalated due to repeated incidents\",\n  \"severity\": \"high\",\n  \"notes\": \"Updated notes with additional context\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans/{{visitorBanId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans", "{{visitorBanId}}"]
        }
      }
    },
    {
      "name": "Unban Visitor by ID",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reason\": \"Resident requested to lift the ban after apology\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans/{{visitorBanId}}/unban",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans", "{{visitorBanId}}", "unban"]
        }
      }
    },
    {
      "name": "Unban Visitor by Phone",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"{{testPhoneNumber}}\",\n  \"reason\": \"Temporary ban period has ended\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans/unban-by-phone",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans", "unban-by-phone"]
        }
      }
    },
    {
      "name": "Get Visitor Ban History",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans/history/{{bannedPhoneNumber}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans", "history", "{{bannedPhoneNumber}}"]
        }
      }
    },
    {
      "name": "Get Expiring Bans",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans/expiring",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans", "expiring"]
        }
      }
    },
    {
      "name": "Create Automatic Ban (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",  
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": \"{{residentId}}\",\n  \"name\": \"System Ban\",\n  \"phone\": \"{{bannedPhoneNumber}}\",\n  \"trigger\": \"Suspicious activity detected by security system\",\n  \"severity\": \"high\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/visitor-bans/automatic",
          "host": ["{{baseUrl}}"],
          "path": ["api", "visitor-bans", "automatic"]
        }
      }
    }
  ]
}