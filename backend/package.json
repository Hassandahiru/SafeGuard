{
  "name": "safeguard-backend",
  "version": "1.0.0",
  "description": "SafeGuard Backend API - A comprehensive visitor management system for gated communities",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "node tests/run-all-tests.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest",
    "test:config": "node tests/config-test.js",
    "test:auth": "node tests/auth-complete-test.js",
    "test:api": "node tests/api-test-suite.js",
    "test:setup": "node tests/setup-test-environment.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "docs:generate": "node scripts/generate-docs.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hassandahiru/SafeGuard.git"
  },
  "keywords": [
    "node.js",
    "express",
    "socket.io",
    "postgresql",
    "visitor-management",
    "qr-code",
    "real-time"
  ],
  "author": "Hassan Dahiru Ado",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Hassandahiru/SafeGuard/issues"
  },
  "homepage": "https://github.com/Hassandahiru/SafeGuard#readme",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "axios": "^1.11.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "socket.io-client": "^4.7.4",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!src/config/**/*.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
